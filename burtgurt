javascript:(function(){const divs=document.querySelectorAll('.live-streams-monitoring-point_live-streams-monitoring-point__KOqPQ .live-streams-monitoring-point_list__g0ojU .live-streams-monitoring-point_item__STDCt.live-streams-monitoring-point_popular__x1FQU .live-streams-monitoring-point_name__6nqOh');divs.forEach(div=>{const color=window.getComputedStyle(div).color;if(color==='rgb(192, 11, 0)'||color==='#c00b00'||color==='rgb(204, 0, 0)'){div.click();}});divs.forEach(div=>{let prevColor=window.getComputedStyle(div).color;const observer=new MutationObserver(()=>{const currentColor=window.getComputedStyle(div).color;if(currentColor==='rgb(192, 11, 0)'&&prevColor!=='rgb(192, 11, 0)'){div.click();}prevColor=currentColor;});observer.observe(div,{attributes:true,subtree:true,attributeFilter:['style','class']});});})();
